<%= form_for(@issue, :html => {:multipart => true}) do |f| %>

  <%= hidden_field( :project, :id, :value => params[:project_id]) %> 
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details, :cols => 80, :rows => 3  %>
  </div>
  <div class="field">
    <%= f.label :risk %><br />
    <%= f.collection_select(:risk, ['low', 'medium', 'high', 'critical' ], :to_s, :to_s, {:prompt => true}) %> 
  </div>
  <div class="field">
    <%= f.label :recommendation %><br />
    <%= f.text_area :recommendation, :cols => 80, :rows => 3 %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.collection_select(:status, ['open', 'retesting', 'close' ], :to_s, :to_s ) %> 
  </div>
 
  <div class="field">
    <%= f.label :attachment %><br />
    <%= file_field(:attachment, :file) %> 
  </div>
 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
