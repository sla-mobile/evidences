<!DOCTYPE html>
<html>
<head>
  <title>Evidences</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button"class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">Evidences</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <% if request.env["PATH_INFO"] =~ /^\/projects/ %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
                <a href="/projects">Projects</a>
              </li>
              <% if request.env["PATH_INFO"] =~ /^\/issues/ %>
                <li class="active">
              <% else %>
                <li>
              <% end %>

                <a href="/issues">Open Issues</a>
              </li>

              <% if request.env["PATH_INFO"] =~ /^\/retesting/ %>
                <li class="active">
              <% else %>
                <li>
              <% end %>

                <a href="/retesting">Issues to retest</a>
              </li>
 

              <li class="divider-vertical"></li>
              <% if request.env["PATH_INFO"] =~ /^\/account/ %>
                <li class="active">
              <% else %>
                <li>
              <% end %>

                <a href="/account">My account</a>
              </li>
              <li class="">
                <a href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
<section id="typography">
 <div class="page-header"/>
</section>  
        <%= yield %>
    </div>
</body>
</html>
