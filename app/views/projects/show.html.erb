<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Details:</b>
  <%= @project.details %>
</p>


<% if @project.issues.size > 0 %>
<h3>Issues: </h3>
<ul>
<% @project.issues.each do |i| %>
  <li><%= link_to i.title ,issue_path(i) %>(<%= i.status %>)</li>
<% end %>
</ul>
<% else %> 
  <h3> No Issues (yet ;) ) </h3>
<% end %>

<% if @project.comments.size > 0 %>
<h3>Comments: </h3>
<ul>
<% @project.comments.each do |i| %>
  <li><%= link_to i.title ,comment_path(i) %></li>
<% end %>
</ul>
<% else %>
  <h3> No comments </h3>
<% end %>



<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
