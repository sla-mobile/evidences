  <div class="row">
  <h1>Projects</h1>
    <div class="span12">

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Issues</th>
    <th>Action</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td id=<%= project.name %>><%= project.name %></td>
    <td><%= project.details %></td>
    <td><%= project.issues.size %> issue<%='s' if project.issues.size > 1 %>  &nbsp;  &nbsp; (<%= link_to 'add an issue', new_issue_path({'project_id' => project } ) %>)</td>
    <td>(<%= link_to 'show', project %>|<%= link_to 'edit', edit_project_path(project) %>|<%= link_to 'destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>)</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path %>
</div>
</div>
  
